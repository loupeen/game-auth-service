{
  "name": "@loupeen/game-auth-service",
  "version": "0.1.0",
  "description": "Authentication service for Loupeen RTS Platform",
  "bin": {
    "game-auth-service": "bin/game-auth-service.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "TEST_ENV=test jest --config test/config/jest-integration.config.js",
    "test:integration:watch": "jest --config test/config/jest-integration.config.js --watch",
    "test:performance": "echo 'Performance tests not yet implemented'",
    "test:security": "echo 'Security tests not yet implemented'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:integration",
    "cdk": "cdk",
    "synth": "JSII_SILENCE_WARNING_UNTESTED_NODE_VERSION=1 cdk synth",
    "deploy": "echo 'Use GitHub Actions for deployment. See .github/workflows/'",
    "deploy:monitoring": "JSII_SILENCE_WARNING_UNTESTED_NODE_VERSION=1 cdk deploy --app 'npx ts-node bin/monitoring-stack.ts'",
    "diff": "JSII_SILENCE_WARNING_UNTESTED_NODE_VERSION=1 cdk diff",
    "destroy": "JSII_SILENCE_WARNING_UNTESTED_NODE_VERSION=1 cdk destroy",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "20.6.0",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "aws-cdk": "2.95.1",
    "axios": "^1.6.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.873.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.400.0",
    "@aws-sdk/client-dynamodb": "^3.400.0",
    "@aws-sdk/client-lambda": "^3.873.0",
    "@aws-sdk/util-dynamodb": "^3.873.0",
    "@cedar-policy/cedar-wasm": "^4.5.0",
    "@loupeen/shared-config-library": "file:../shared-config-library",
    "@types/aws-lambda": "^8.10.119",
    "aws-cdk-lib": "2.95.1",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.0.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/loupeen/game-auth-service.git"
  },
  "license": "UNLICENSED",
  "private": true
}
